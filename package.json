{
  "name": "mozilla-loop-server",
  "description": "The Mozilla Loop (WebRTC App) server",
  "version": "0.3.0-dev",
  "homepage": "https://github.com/mozilla-services/loop-server/",
  "license": "MPL-2.0",
  "engines": {
    "node": "0.10.x",
    "npm": "1.3.x"
  },
  "dependencies": {
    "express": "3.x",
    "bunyan": "0.21.x",
    "urlsafe-base64": "0.0.2",
    "mongodb": "1.3.23",
    "convict": "0.4.2",
    "browserid-verify": "0.1.2",
    "client-sessions": "0.6.0",
    "request": "2.34.0",
    "opentok": "1.0.2",
    "raven": "0.6.2",
    "cors": "2.2",
    "connect-validation": "0.1.0"
  },
  "devDependencies": {
    "awsbox": "0.6.x",
    "mocha": "1.8.x",
    "chai": "1.5.x",
    "istanbul": "*",
    "jshint": "2.x",
    "sinon": "1.9.x",
    "supertest": "0.10.x",
    "grunt": "0.4.x",
    "grunt-contrib-jshint": "0.9.x",
    "jshint-stylish": "0.1.x",
    "grunt-jscs-checker": "0.4.x",
    "grunt-contrib-clean": "0.5.x",
    "grunt-nsp-package": "0.0.x",
    "precommit-hook": "0.3.x",
    "grunt-copyright": "0.1.x"
  },
  "scripts": {
    "clean-install": "grunt clean && npm i --silent",
    "test": "grunt lint && npm run cover-mocha",
    "start": "PORT=5000 node loop/index",
    "validate": "grunt validate",
    "postinstall": "grunt validate-package",
    "cover-mocha": "NODE_ENV=test ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --reporter spec test/* && echo \"aim your browser at coverage/lcov-report/index.html for details\"",
    "mocha": "NODE_ENV=test ./node_modules/mocha/bin/mocha test/* --reporter spec",
    "runserver": "NODE_ENV=${NODE_ENV} PORT=5000 node loop/index"
  },
  "config": {
    "precommit": {
      "lint": false,
      "test": false
    }
  }
}
